{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerGroupName": {
      "type": "string",
      "defaultValue": "tip-me-api-container-group",
      "metadata": {
        "description": "Name for the container group"
      }
    },
    "containerName": {
      "type": "string",
      "defaultValue": "tip-me-api",
      "metadata": {
        "description": "Name for the container"
      }
    },
    "image": {
      "type": "string",
      "defaultValue": "tip-me-api:latest",
      "metadata": {
        "description": "Container image to deploy"
      }
    },
    "jwtSecret": {
      "type": "securestring",
      "metadata": {
        "description": "JWT secret for authentication"
      }
    },
    "baseUrl": {
      "type": "string",
      "defaultValue": "https://tip-me-api.azurewebsites.net",
      "metadata": {
        "description": "Base URL of the application"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-03-01",
      "name": "[parameters('containerGroupName')]",
      "location": "[variables('location')]",
      "properties": {
        "containers": [
          {
            "name": "[parameters('containerName')]",
            "properties": {
              "image": "[parameters('image')]",
              "ports": [
                {
                  "port": 3000,
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "NODE_ENV",
                  "value": "production"
                },
                {
                  "name": "PORT",
                  "value": "3000"
                },
                {
                  "name": "JWT_SECRET",
                  "secureValue": "[parameters('jwtSecret')]"
                },
                {
                  "name": "BASE_URL",
                  "value": "[parameters('baseUrl')]"
                },
                {
                  "name": "SERVICE_FEE_BPS",
                  "value": "250"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": 1
                }
              }
            }
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "TCP",
              "port": 3000
            }
          ],
          "dnsNameLabel": "tip-me-api"
        },
        "restartPolicy": "Always"
      }
    }
  ],
  "outputs": {
    "containerIPv4Address": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('containerGroupName'))).ipAddress.ip]"
    },
    "containerFQDN": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('containerGroupName'))).ipAddress.fqdn]"
    }
  }
}