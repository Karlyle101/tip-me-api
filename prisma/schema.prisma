// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  BARISTA
  CUSTOMER
  ADMIN
}

enum TipStatus {
  PENDING
  COMPLETED
  FAILED
}

enum PayoutStatus {
  REQUESTED
  PROCESSING
  PAID
  FAILED
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  passwordHash String
  name         String
  role         UserRole @default(CUSTOMER)
  handle       String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  incomingTips Tip[]    @relation("IncomingTips")
  outgoingTips Tip[]    @relation("OutgoingTips")
  payouts      Payout[]
}

model Tip {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  toUser      User      @relation("IncomingTips", fields: [toUserId], references: [id])
  toUserId    String    @db.ObjectId
  fromUser    User?     @relation("OutgoingTips", fields: [fromUserId], references: [id])
  fromUserId  String?   @db.ObjectId
  fromEmail   String?
  amountCents Int
  feeCents    Int
  netCents    Int
  message     String?
  status      TipStatus @default(PENDING)
  providerRef String?
  createdAt   DateTime  @default(now())

  @@index([toUserId])
  @@index([fromUserId])
  @@index([status])
}

model Payout {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  user        User          @relation(fields: [userId], references: [id])
  userId      String        @db.ObjectId
  amountCents Int
  status      PayoutStatus  @default(REQUESTED)
  providerRef String?
  createdAt   DateTime      @default(now())

  @@index([userId])
  @@index([status])
}
